<%- include("partials/head") %>
<%- include("partials/header") %>


  <h1>Atualizar Usuario:</h1>
  <% if(userSelecionado) { %>
  <form class="myform" action="/atualizar/<%= userSelecionado.id %>" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <label for="name">Alterar nome?</label>
    <input type="text" name="name" required placeholder="seu nome aqui..." value="<%= userSelecionado.name %>">

    <label for="idade">Alterar idade?</label>
    <input type="number" name="idade" required placeholder="sua idade aqui..." value="<%= userSelecionado.idade %>">

    <input class="btn" type="submit" value="atualizar">
  </form>
  <% } %>


<%- include("partials/footer") %>